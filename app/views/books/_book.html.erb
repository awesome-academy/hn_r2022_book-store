<div class="product-grid">
  <div class="content_box">
    <a href="single.html">
      <div class="left-grid-view grid-view-left book-img">
        <%= link_to presence_image?(book), book_path(book.id) %>
      </div>
    </a>
      <h4 class="book-title"><%= link_to book.name, book_path(book.id) %></h4>
      <span class="book-price"><%= number_to_currency(book.price) %></span>
  </div>
</div>

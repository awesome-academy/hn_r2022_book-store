<div class="header">
  <div class="top-header">
    <div class="container">
      <div class="top-header-left">
        <ul class="support">
          <li><a href="#"><label> </label></a></li>
          <li>
            <%= link_to t("24_7_support"), "#" %>
          </li>
        </ul>
        <ul class="support">
          <li class="van"><a href="#"><label> </label></a></li>
        </ul>
        <div class="clearfix"> </div>
      </div>
      <div class="top-header-right">
        <%= link_to t("english"), locale: :en %>
        <%= link_to t("vietnamese"), locale: :vi %>
        <!---->
        <div class="clearfix"> </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
  <div class="bottom-header">
    <div class="container">
      <div class="header-bottom-left">
        <div class="logo">
          <%= link_to image_tag("logo.png", alt: "Logo", id: "logo"), root_path %>
        </div>
        <div class="clearfix"> </div>
      </div>
      <div class="header-bottom-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <div class="account">
              <%= link_to t("admin_pages"), admin_root_path %>
            </div>
          <% end %>
          <div class="account">
            <%= link_to t("discount"), "#" %>
          </div>
          <div class="cart">
            <%= render "layouts/cart_text" %>
          </div>
        <% end %>
        <ul class="login">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t("account") %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" id="account-options">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("your_orders"), orders_path %></li>
                <li><%= link_to t("setting"), edit_user_registration_path %></li>
                <li>
                  <%= link_to t("log_out"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li> |
            <li ><%= link_to t("signup"), signup_path %></li>
          <% end %>
        </ul>
        <div class="clearfix"> </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>

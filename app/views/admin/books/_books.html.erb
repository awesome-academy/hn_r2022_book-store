<table class="order-history admin-orders">
  <h4><%= t "books_list" %></h4>
  <h4><%= link_to t("new_book"), new_admin_book_path %></h4>
  <tr class="order-title">
    <th class="info-title"><%= t ".book_name" %></th>
    <th class="quantity-title"><%= t ".quantity" %></th>
    <th class="quantity-title"><%= t ".publish_year" %></th>
    <th class="option-title"><%= t ".price" %></th>
    <th class="option-title"><%= t ".num_pages" %></th>
    <th class="option-title"><%= t ".authors" %></th>
    <th class="option-title"><%= t ".option" %></th>
  </tr>
  <div class="orders-list">
      <%= render @books.includes(:authors) %>
  </div>
</table>
